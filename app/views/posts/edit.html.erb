<%= form_for([@comment, @post]) do |f| %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :body, "Body" %><br/>
    <%= f.text_area :body %>
  </div>
  <div class="comment_actions">
    <%= f.submit "Update", :disable_with => 'Updating...'%>
  </div>  
<% end %>