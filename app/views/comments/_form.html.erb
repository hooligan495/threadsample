<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="comment_actions">
    <%= f.submit %>
    <% unless @comment.nil? %>
      <%= link_to 'Cancel', @comment, :class => "comment_button" %>
    <% else %>
      <%= link_to 'Cancel', comments_path, :class => "comment_button" %>
    <% end %>
  </div>
<% end %>
